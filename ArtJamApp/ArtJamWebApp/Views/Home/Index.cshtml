@model ArtJamWebApp.Models.HomeViewModel

<div class="jumbotron text-center">
    <h1>Show your creativity with ArtJam where the brushes meet the notes.</h1>
    <form method="get" asp-controller="Home" asp-action="Index" class="form-inline">
        <div class="input-group">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search for groups or musicians..." value="@(Model.SearchQuery ?? "")">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">Search</button>
            </span>
        </div>
    </form>
</div>

<div class="container">
    <h3>Upcoming Events</h3>
    <div class="row">
        @for (int i = 0; i < Model.EventNames.Count; i++)
        {
            <div class="col-sm-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>@Model.EventNames[i]</h4>
                    </div>
                    <div class="panel-body">
                        <p>Date: @Model.EventDates[i].ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />

    <h3>Other Section</h3>
    <p>This section will be updated soon...</p>
</div>
